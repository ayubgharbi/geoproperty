<div class="property-main-photo" style="background-image: url('<%= property_photo_url @property %>')">
  <div class="photo-overlay">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p class="mb-0"><%= @property.address %></p>
          <p class="h2"><%= @property.price > 0 ? number_to_currency(@property.price, precision: 0) : "For sale" %></p>
        </div >
        <div class="col-6 text-center">
          <div class="row mr-3 bg-light p-3">
            <div class="col-4">
              <p class="m-0"><strong>Rooms</strong></p>
              <span class="font-18"><%= @property.rooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Bathrooms</strong></p>
              <span class="font-18"><%= @property.bathrooms %></span>
            </div>
            <div class="col-4">
              <p class="m-0"><strong>Parking</strong></p>
              <span class="font-18"><%= @property.parking_spaces %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="row border-bottom border-top mt-5 mb-4 pt-4 pb-4">
        <div class="col-6">
          <strong class="text-success"><%= link_to "Est. Monthly Repayments of #{ number_to_currency((@property.price / 360), precision: 0) } *", "#", class: "text-success" %></strong>
        </div>
        <div class="col-6 text-right">
          <strong><%= link_to "Can I afford this property?*", "#", class: "text-success" %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="h3"><%= @property.name %></p>      
          <p class="h4">Property description</p>

          <div id="prop-details" class="">
            <%= simple_format @property.details %>
          </div>

          <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>

          <p class="mt-5">*This rate is based on a 30 year mortgage, after paying an initial 10% down payment. Shorter term mortages would require a higher monthly repayment.</p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <%= render "properties/agent_details" %>
    </div>
  </div>
</div>